<h1>Welcome to CSE Motors!</h1>


<% if (messages && messages.length > 0) { %>
  <div class="flash-message">
    <% messages.forEach(msg => { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

<section class="hero">
    <img src="/images/vehicles/delorean.jpg" alt="Delorean">
    <div class="hero-text">
        <h2>DMC Delorean</h2>
        <ul>
            <li>3 Cup holders</li>
            <li>Superman doors</li>
            <li>Fuzzy Dice!</li>
        </ul>
        <button>Own Today!</button>
    </div>
</section>

<section class="features">
    <div class="upgrades">
        <h3>Dolorean Upgrades</h3>
        <div class="upgrade-grid">
            <figure>
                <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor"><a href="#"></a>
                <figcaption>Flux Capacitor</figcaption>
            </figure>
            <figure>
                <img src="/images/upgrades/flame.jpg" alt="Flame Decals"><a href="#"></a>
                <figcaption>Flame Decals</figcaption>
            </figure>    
            <figure>
                <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps"><a href="#"></a>
                <figcaption>Hub Caps</figcaption>
            </figure>
            <figure>
                <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Sticker"><a href="#"></a>
                <figcaption>Bumper Sticker</figcaption>
            </figure>   
        </div>
    </div>
    <div class="reviews">
        <h3>Dolorean Reviews</h3>
        <ul>
            <li>"So fast! it almost feels like travelling in time!" (4/5)</li>
            <li>"Coolest ride on the road!" (4/5)</li>
            <li>"I'm feeling McFly!" (5/5)</li>
            <li>"The most futuristic ride of our day!" (4.5/5)</li>
            <li>"80's Livin and I love it!" (5/5)</li>
        </ul>
    </div>
</section>