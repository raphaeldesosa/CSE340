<h1><%= title %></h1>

<p><strong>Confirm Deletion</strong>- This action is permanent and cannot be undone</p>

<% if (errors && errors.length > 0) { %>
  <div class="form-errors">
    <% errors.forEach(error => { %>
      <p><%= error.msg %></p>
    <% }) %>
  </div>
<% } %>

<form class="delete-form" id="deleteForm" method="post" action="/inv/delete">
  
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" step="0.01" readonly>

  <button type="submit">Delete Inventory</button>

  <!-- Hidden field for the inventory ID -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">
</form>

